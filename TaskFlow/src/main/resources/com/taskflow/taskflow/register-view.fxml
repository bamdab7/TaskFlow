            fx:controller="com.taskflow.taskflow.RegisterController">
    <left>
        <GridPane prefHeight="410.0" prefWidth="235.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="127.0" minHeight="10.0" prefHeight="106.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="214.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="214.0" minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="214.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="214.0" minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="154.0" minHeight="10.0" prefHeight="58.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="154.0" minHeight="10.0" prefHeight="88.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SIGN UP" textAlignment="CENTER"
                  wrappingWidth="252.384765625">
                <font>
                    <Font size="36.0"/>
                </font>
