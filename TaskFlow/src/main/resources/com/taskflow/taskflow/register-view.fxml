            <JFXButton fx:id="btnSignup" onAction="#btnSignup" prefHeight="31.0" prefWidth="154.0"
                       style="-fx-background-color: #68C5E5; -fx-background-radius: 15;" text="SIGN UP"
                       GridPane.halignment="CENTER" GridPane.rowIndex="5"/>
