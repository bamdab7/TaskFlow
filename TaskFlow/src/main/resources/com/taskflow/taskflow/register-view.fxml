                           prefWidth="170.0" promptText="Password" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
            <Hyperlink fx:id="linkRegister" alignment="CENTER" contentDisplay="CENTER" onAction="#linkRegister"
                       prefHeight="24.0" prefWidth="244.0" text="Ya estas registrado? Logeate aqui?"
                       GridPane.rowIndex="6"/>
            <TextField fx:id="txtName" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="18.0" prefWidth="170.0"
                       promptText="Name" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
            <TextField fx:id="txtEmail" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="18.0" prefWidth="170.0"
                       promptText="e-mail" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
        </GridPane>
